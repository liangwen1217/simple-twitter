<div class="profile">
  <%= render partial: "shared/avatar", locals: {avatar: user.avatar}if user.avatar? %>
  <p class="user-name"><%= user.name %></p>
  <div class="intro">
    <%= user.introduction %>
  </div>
  <div class="items">
    <%= link_to "Tweets #{user.tweets.count}", tweets_user_path(user) %><br/>
    <%= link_to "Follower #{user.followers.count}", followers_user_path(user) %></br/>
    <%= link_to "Follower #{user.followers.count}", followers_user_path(user) %><br/>
    <%= link_to "Like #{user.likes_count} ",likes_user_path(user) %>
  </div>
  <div class="button">
    <% if user == current_user %>
      <%= link_to "Edit Profile", edit_user_path(current_user) %>
    <% else %>
      <%= render partition: "shared/follo_btn", locals: {user: user} %>
    <% end %>
  </div>
</div>